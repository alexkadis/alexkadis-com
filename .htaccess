# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI}


RewriteCond %{HTTP:CF-Visitor} '"scheme":"http"'
RewriteCond %{HTTP_HOST} ^alexkadis.com$
RewriteRule ^(.*)$ https://alexkadis.com/$1 [L]

